[
  {
    "name": "traefik",
    "image": "traefik:morbier",
    "command": [
      "--ecs",
      "--ecs.region=${aws_region}",
      "--ecs.cluster=${cluster_name}",
      "--ecs.watch=true",
      "--ecs.exposedBydefault=false",
      "--ecs.domain=${domain_name}",
      "--loglevel=INFO",
      "--web=true"
    ],
    "cpu": 50,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80
      },
      {
        "containerPort": 8080
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${cluster_name}.traefik-container-logs",
        "awslogs-region": "${cloudwatch_region}",
        "awslogs-stream-prefix": "traefik"
      }
    }
  }
]
