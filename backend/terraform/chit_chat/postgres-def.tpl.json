[
  {
    "name": "postgres-db",
    "image": "postgres:latest",
    "cpu": 10,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 5432
      }
    ],
    "environment": [
      {
        "Name": "SERVICE_5432_NAME",
        "Value": "postgres_${environment}"
      },
      {
        "Name" : "POSTGRES_USER",
        "Value": "${db_username}"
      },
      {
        "Name" : "POSTGRES_PASSWORD",
        "Value": "${db_password}"
      },
      {
        "Name" : "POSTGRES_DB",
        "Value": "${db_name}"
      }
    ]
  }
]
