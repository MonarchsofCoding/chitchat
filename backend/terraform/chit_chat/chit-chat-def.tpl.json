[
  {
    "name": "chit-chat_${environment}",
    "image": "monarchsofcoding/chitchat:release-${backend_version}",
    "cpu": 50,
    "memory": 512,
    "essential": true,
    "portMappings": [
      {
        "containerPort": 80
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${environment}.chit-chat-container-logs",
        "awslogs-region": "${cloudwatch_region}",
        "awslogs-stream-prefix": "chit-chat"
      }
    },
    "command": [
      "foreground"
    ],
    "environment": [
      {
        "Name": "ECS_DNS_POSTGRES",
        "Value": "${ecs_postgres_name}"
      },
      {
        "Name": "SECRET_KEY_BASE",
        "Value": "${secret_key_base}"
      },
      {
        "Name": "GUARDIAN_SECRET_KEY",
        "Value": "${guadian_secret_key}"
      },
      {
        "Name": "DATABASE_USERNAME",
        "Value": "${database_username}"
      },
      {
        "Name": "DATABASE_PASSWORD",
        "Value": "${database_password}"
      },
      {
        "Name": "DATABASE_NAME",
        "Value": "${database_name}"
      },
      {
        "Name": "PORT",
        "Value": "80"
      },
      {
        "Name": "MIX_ENV",
        "Value": "prod"
      },
      {
        "Name": "NODE_COOKIE",
        "Value": "${node_cookie}"
      }
    ],
    "dockerLabels": {
      "traefik.enable": "true",
      "traefik.frontend.rule": "Host:${domain}"
    }
  }
]
